{
  "eslint.enable": true,
  "eslint.validate": [
    "javascript",
    "javascriptreact",
    "typescript",
    "typescriptreact"
  ],
  "editor.codeActionsOnSave": {
    "source.fixAll.eslint": true
  },
  "eslint.workingDirectories": [
    { "mode": "auto" }
  ],
  "files.exclude": {
    "**/.eslintrc.json": true,
    "**/.eslintrc.js": true,
    "**/.eslintignore": true
  }
}
